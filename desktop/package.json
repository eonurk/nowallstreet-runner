{
  "name": "nowallstreet-desktop-runner",
  "private": true,
  "version": "0.1.0",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron ./src/main.js",
    "dist:mac": "electron-builder --mac dmg",
    "dist:win": "electron-builder --win nsis",
    "dist:linux": "electron-builder --linux AppImage",
    "dist:all": "electron-builder --mac dmg --win nsis --linux AppImage"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "co.nowall.runner",
    "productName": "NoWallStreet Runner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../runner",
        "to": "runner",
        "filter": [
          "runner.mjs",
          "package.json",
          "README.md"
        ]
      },
      {
        "from": "../agent/dist",
        "to": "agentd"
      }
    ],
    "asar": true,
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.finance"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    }
  }
}
